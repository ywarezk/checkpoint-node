    "version": "0.2.0",
    "configurations": [              
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test"
            ],
            "env": {
                "DATABASE_URL": "postgres://@localhost:5432/checkpoint"
            },
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\bin\\www",
            "env": {
                "DATABASE_URL": "postgres://@localhost:5432/checkpoint"
            }
        }
    ]
}